<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appdev.blogapp.Activities.LoginActivity">


    <EditText
        android:id="@+id/emailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailId"
        android:layout_below="@+id/emailId"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordId"
        android:layout_below="@+id/passwordId"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="53dp"
        android:text="Login" />

    <Button
        android:id="@+id/createAccountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordId"
        android:layout_below="@+id/loginId"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="41dp"
        android:background="@android:color/holo_green_light"
        android:text="Create New Account" />
</RelativeLayout>
